@model IEnumerable<gestion_de_notes.Models.Professeur>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomPrenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdresseProf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matiere)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (item.Matiere != null)
            {
                    <td>
                        @Html.DisplayFor(modelItem => item.NomPrenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdresseProf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumTel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matiere.NomMatiere)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProfesseur">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdProfesseur">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdProfesseur">Delete</a>
                    </td>
            }
        </tr>
}
    </tbody>
</table>
